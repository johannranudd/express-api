generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid      String    @id @unique @default(uuid())
  email     String
  firstName String
  lastName  String
  password  String
  // role      UserRole
  listings  Listing[]
  offers    Offer[]
}

// enum UserRole {
//   Applicant,
//   Client,
//   Admin
// }

model Listing {
  uuid         String   @id @unique @default(uuid())
  title        String
  tags         String[]
  description  String
  requirements String[]
  deadline     DateTime
  created      DateTime @default(now())
  updated      DateTime @updatedAt
  user         User?    @relation(fields: [userUuid], references: [uuid])
  userUuid     String?
}

model Offer {
  uuid     String  @id @unique @default(uuid())
  sentTo   User?   @relation(fields: [userUuid], references: [uuid])
  userUuid String?
}
